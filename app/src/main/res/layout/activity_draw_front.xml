<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_draw_whole"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ewang.helloworld.DrawFrontActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_gravity="top"
        android:background="@color/grey"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_common_close_white_bounding"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_common_done_white_bounding"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_center_draw_area"
        android:layout_gravity="center"
        android:background="@color/grey"
        app:layout_heightPercent="80%"
        app:layout_widthPercent="100%">


        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/tshirt_front_pic" />

        <FrameLayout
            android:id="@+id/layout_view_canvas"
            android:layout_centerInParent="true"
            android:background="@color/lightGrey"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="55%" />


        <android.support.percent.PercentRelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="15%">

            <ImageView
                android:id="@+id/image_action_layers"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_menu_layers"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="80%" />

            <ImageView
                android:id="@+id/image_menu_close"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_common_close_white_bounding"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="80%" />

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_basic_bar"
        android:layout_gravity="bottom"
        android:background="@color/grey"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/image_menu_add_photo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu_add_photo"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="25%" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_menu_add_photo"
            android:src="@drawable/ic_menu_add_photo"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="25%" />

        <ImageView
            android:id="@+id/image_menu_text"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image_menu_pencil"
            android:src="@drawable/ic_menu_add_curved_text"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="25%" />

        <ImageView
            android:id="@+id/image_menu_pencil"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_draw_white"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="25%" />

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentFrameLayout>