<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ewang.helloworld.DrawFrontActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_gravity="top"
        android:background="@color/grey"
        app:layout_heightPercent="85%"
        app:layout_widthPercent="100%">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/tshirt_front_pic" >
        </ImageView>

        <!--TODO 绘制区域及缩放问题-->
        <FrameLayout
            android:id="@+id/layout_view_canvas"
            app:layout_widthPercent="55%"
            app:layout_heightPercent="66%"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:background="@color/colorPrimary" />
    </android.support.percent.PercentRelativeLayout>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:background="@color/grey"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%">

    </RelativeLayout>

</android.support.percent.PercentFrameLayout>