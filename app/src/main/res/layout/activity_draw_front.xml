<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ewang.helloworld.DrawFrontActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_gravity="top"
        android:background="@color/grey"
        app:layout_heightPercent="85%"
        app:layout_widthPercent="100%">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/tshirt_front_pic" />

            <!--TODO 绘制区域及缩放问题-->
            <FrameLayout
                android:id="@+id/layout_view_canvas"
                android:layout_centerInParent="true"
                android:background="@color/lightGrey"
                app:layout_heightPercent="60%"
                app:layout_widthPercent="55%" />
        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="15%">

            <ImageView
                android:id="@+id/image_action_layers"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_menu_layers"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="80%" />

            <ImageView
                android:id="@+id/image_menu_expend"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_common_close"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="80%" />

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_gravity="bottom"
        android:background="@color/grey"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/image_menu_add_photo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu_add_photo"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="25%" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_menu_add_photo"
            android:src="@drawable/ic_menu_add_photo"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="25%" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image_menu_draw"
            android:src="@drawable/ic_menu_add_photo"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="25%" />

        <ImageView
            android:id="@+id/image_menu_draw"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_draw_white"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="25%" />
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentFrameLayout>