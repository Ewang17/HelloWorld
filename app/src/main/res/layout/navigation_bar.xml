<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentBottom="true"
    android:background="@color/grey">


    <ImageView
        android:id="@+id/nav_shop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/nav_unchoose"
        app:layout_heightPercent="90%"
        app:layout_widthPercent="20%" />

    <ImageView
        android:id="@+id/nav_world"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/nav_shop"
        android:src="@drawable/nav_unchoose"
        app:layout_heightPercent="90%"
        app:layout_widthPercent="20%" />


    <ImageView
        android:id="@+id/nav_draw"
        android:layout_centerInParent="true"
        android:background="@drawable/apple_pic"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="15%" />


    <ImageView
        android:id="@+id/nav_session"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/nav_self"
        android:src="@drawable/nav_unchoose"
        app:layout_heightPercent="90%"
        app:layout_widthPercent="20%" />

    <ImageView
        android:id="@+id/nav_self"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/nav_unchoose"
        app:layout_heightPercent="90%"
        app:layout_widthPercent="20%" />


</android.support.percent.PercentRelativeLayout>
