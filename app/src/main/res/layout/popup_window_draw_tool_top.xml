<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_draw_cancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:src="@drawable/cancel"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="25%" />

    <ImageView
        android:id="@+id/image_draw_undo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image_draw_cancel"
        android:padding="15dp"
        android:src="@drawable/undo"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="25%" />

    <ImageView
        android:id="@+id/image_draw_recover"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/image_draw_done"
        android:padding="15dp"
        android:src="@drawable/recover"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="25%" />

    <ImageView
        android:id="@+id/image_draw_done"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:src="@drawable/next"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="25%" />

</android.support.percent.PercentRelativeLayout>